        <servlet-name>TaxCalculator</servlet-name>
        <url-pattern>/TaxCalculator</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Info</servlet-name>
        <url-pattern>/Info</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Guidelines</servlet-name>
        <url-pattern>/Guidelines</url-pattern>
    </servlet-mapping>
