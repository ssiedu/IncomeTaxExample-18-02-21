    <servlet>
        <servlet-name>TaxCalculator</servlet-name>
        <servlet-class>TaxCalculator</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Info</servlet-name>
        <servlet-class>Info</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Guidelines</servlet-name>
        <servlet-class>Guidelines</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Addition</servlet-name>
        <servlet-class>Addition</servlet-class>
    </servlet>
