        <servlet-name>Subtraction</servlet-name>
        <url-pattern>/Subtraction</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Calculator</servlet-name>
        <url-pattern>/Calculator</url-pattern>
    </servlet-mapping>
